<div class="container d-flex justify-content-center">
  <div class="col-lg-4">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control rounded-0", id:"floatingInput",placeholder:"name@example.com" %>
      <%= f.label :email, for: "floatingInput" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"w-100 btn btn-lg btn-primary mt-2 mb-2 rounded-0" %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"w-100 btn btn-lg btn-primary mb-2 rounded-0" %>
    </div>
    <% end %>
  </div>
</div>