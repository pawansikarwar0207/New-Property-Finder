<div class="container d-flex justify-content-center">
  <div class="col-lg-3">
   <main class="form-signin mt-5">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <h1 class="h3 mb-3 fw-normal text-center">Please sign up</h1>

    <div class="form-floating">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class:"form-control rounded-0", id:"floatingInput",placeholder:"first_name"  %>
      <%= f.label :first_name, for: "floatingInput" %>
    </div>

    <div class="form-floating">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class:"form-control rounded-0", id:"floatingInput",placeholder:"last_name"  %>
      <%= f.label :last_name, for: "floatingInput" %>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control rounded-0", id:"floatingInput",placeholder:"name@example.com" %>
      <%= f.label :email, for: "floatingInput" %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password",class:"form-control rounded-0", id:"floatingInput",placeholder:"password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.label :password, for: "floatingInput"%>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control rounded-0", id:"floatingInput",placeholder:"password_confirmation" %>
      <%= f.label :password_confirmation, for:"floatingInput" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"w-100 btn btn-lg btn-primary mt-2 mb-2 rounded-0"  %>
    </div>
    <% end %>
  </main>
</div>
</div>