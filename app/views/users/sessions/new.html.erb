<div class="container d-flex justify-content-center">
  <div class="col-lg-3">
    <main class="form-signin mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 fw-normal text-center">Please sign in</h1>

      <div class="form-floating">
        <%= f.email_field :email, class:"form-control rounded-0", id:"floatingInput",placeholder:"name@example.com" %>
        <%= f.label :email, for: "floatingInput" %>
      </div>
      <div class="form-floating">
        <%= f.text_field :password, class:"form-control rounded-0", id:"floatingInput",placeholder:"password" %>
        <%= f.label :password, for: "floatingInput" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="field mt-2 mb-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>
      <div class="actions mb-2">
        <%= f.submit "Log in", class:"w-100 btn btn-lg btn-primary rounded-0" %>
      </div>
      <% end %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:" w-100 btn btn-primary rounded-0" %>
    </main>






  </div>
</div>