<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-2 mb-2">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: 'form-control mt-2 mb-2' %>
  </div>

  <div class="form-group mt-2 mb-2">
    <%= form.label :summary, style: "display: block" %>
    <%= form.text_field :summary, class: 'form-control mt-2 mb-2' %>
  </div>

  <div class="form-group mt-2 mb-2">
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body, class: 'form-control mt-2 mb-2' %>
  </div>

  <div class="form-group mt-2 mb-2">
    <%= form.label :image, style: "display: block" %>
    <%= form.text_field :image, class: 'form-control mt-2 mb-2' %>
  </div>

  <div class="form-group mt-2 mb-2">
    <%= form.label :active, style: "display: block" %>
    <%= form.check_box :active, class: 'mt-2 mb-2' %>
  </div>

  <div class="form-group mt-2 mb-2">
    <%= form.submit class: 'btn btn-primary btn-sm mt-2' %>
  </div>
<% end %>
