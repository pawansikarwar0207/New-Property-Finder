<%= form_with(model: property) do |form| %>
  <%= render 'shared/validation', item: @property %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control mt-2 mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class: "form-control mt-2 mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :total_price,"Total Price (for sale) / Monthly Price (rental)", style: "display: block" %>
    <%= form.number_field :price, class: "form-control mt-2 mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :rooms, style: "display: block" %>
    <%= form.number_field :rooms, class: "form-control mt-2 mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :bathrooms, style: "display: block" %>
    <%= form.number_field :bathrooms, class: "form-control mt-2 mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :parking_spaces, style: "display: block" %>
    <%= form.number_field :parking_spaces, class: "form-control mt-2 mb-2", min: 0 %>
  </div>

  <div class="form-group mt-2 mb-2">
    <% opts = @property.for_sale? ? {"Sold" => "sold", "Available" => "available" } : {"Leased" => "leased", "Available" => "available" }  %>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, options_for_select(opts, @property.status), class: "form-control mt-2 mb-2", min: 0 %>
  </div>

  <div class="form-group mt-2 mb-2">
    <%= form.label :for_sale, style: "display: block" %>
    <%= form.select :for_sale, options_for_select({"Yes" => true, "No" => false }, @property.for_sale), class: "form-control mt-2 mb-2", min: 0 %>
  </div>

  <div class="form-group mt-2 mb-2">
    <%= form.label :available_date, style: "display: block" %>
    <%= form.date_field :available_date, class: "form-control mt-2 mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :details, style: "display: block" %>
    <%= form.text_area :details, class: "form-control mt-2 mb-2" %>
  </div>

  <div class="form-group">
    <%#= form.label :details %>
    <%#= form.rich_text_area :content, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image, style: "display: block mt-3" %>
    <%= form.file_field :images, multiple:true, class:"mt-3 mb-2" %>
  </div>

  <div class="form-group">
    <%= form.submit "Save Property", class: "btn btn-success mt-3" %>
  </div>
<% end %>
