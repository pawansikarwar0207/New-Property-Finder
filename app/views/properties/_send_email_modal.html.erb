<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <% if agent.present? %>
          <h5 class="modal-title" id="exampleModalLabel">New Message for <%= agent.full_name %></h5>
        <% else %>
          <h5 class="modal-title" id="exampleModalLabel">New Message</h5>
        <% end %>

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-start">
        <%= form_tag email_agent_path, id:"email-agent" do %>
          <% if agent.present? %>
            <%= hidden_field_tag :agent_id, agent.id %>
          <% end %>


          <div class="form-group mb-3 ">
            <label for="message-first-name" class="form-label">First Name</label>
            <input type="first-name" name="first-name" id="message-first-name" class = "form-control">
          </div>

          <div class="form-group mb-3 ">
            <label for="message-last-name" class="form-label">Last Name</label>
            <input type="last-name" name="last-name" id="message-last-name" class = "form-control">
          </div>

          <div class="form-group mb-3 ">
            <label for="message-email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class = "form-control">
          </div>

          <div class="form-group mb-3 ">
            <label for="message-text" class="form-label">Message</label>
            <textarea class="form-control" id="message-text" ></textarea>
          </div>

        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" id="send-message-to-agent">Send Message</button>
      </div>
    </div>
  </div>
</div>